doctype html
html
	head
		title svd.im - styleguide
		link(rel="stylesheet",type="text/css",href="style.css")
		style
			include public.css
		meta(name="viewport", content="width=device-width, initial-scale=1")

	body
		div(id="app")
			input(type="checkbox", id="nav--trigger", class="nav__trigger-input hidden", style="--menu-bg: var(--color-dark); --menu-text: var(--color-white)")
			label.nav__trigger(for="nav--trigger")
				span
			nav.nav--left__large-up.nav--mobile__small-only.nav--mobile__medium-only(fixed, style="--menu-bg: var(--color-dark); --menu-text: var(--color-white)")
				ul.nav__list
					each item in ['intro','buttons','grid','forms','typography','colors','easings','show-more','html-elements','patterns']
						li.nav__item
							a.nav__link(href="#"+item, v-smooth-scroll="{ duration: 1000, offset: -50 }")
								span.nav__text= item

			main
				include pages/intro.pug
				include pages/buttons.pug
				include pages/grid.pug
				include pages/forms.pug
				include pages/typography.pug
				include pages/colors.pug
				include pages/navigation.pug
				include pages/easings.pug
				include pages/show-more.pug
				include pages/html-elements.pug
				include pages/patterns.pug
				
		script(type="text/javascript", src="https://unpkg.com/vue@2.5.16/dist/vue.js")
		script(type="text/javascript", src="main.js")
		
