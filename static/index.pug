						fieldset
							input#hellyeah(type="checkbox")
							label(for="hellyeah") Are you sure?
							
						fieldset
							input#sex-male(type="radio")
							label(for="sex-male") Boy					
							input#sex-female(type="radio")
							label(for="sex-female") Girl					

						fieldset
							label
							input(type="submit",value="Go for it!")

